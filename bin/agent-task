#!/usr/bin/env ruby
# frozen_string_literal: true

lib_dir = File.expand_path('../lib', __dir__)
$LOAD_PATH.unshift(lib_dir) unless $LOAD_PATH.include?(lib_dir)
require 'agent_task/cli'

if ARGV.first == 'setup'
  ARGV.shift
  AgentTask::CLI.run_setup(ARGV)
else
  AgentTask::CLI.start_task(ARGV)
end
